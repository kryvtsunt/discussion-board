<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">HuskyBoard</p>
      <div class="list-group">
        <li class="list-group-item active"> Info 1</li>
        <li class="list-group-item"> Info 2</li>
        <li class="list-group-item"> Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <img class="img-responsive" src= " <%= item.image %>">
      <div class="caption">
        <h4><%= item.name %></h4>
        <p><%= item.description%> </p>
        <p><em>Submitted by <%= item.author.username%></em></p>
        <a class="btn btn-warning" href="/items/<%= item._id %>/edit"> Edit </a>
        <form action="/items/<%= item._id%>?_method=DELETE" method="POST" id="dform">
          <button class="btn btn-danger"> Delete </button>
        </form>
      </div>
      <div class="">
        <div class="text-right">
          <a class="btn btn-primary" href="/items/<%=item._id%>/comments/new"> Add New Comment </a>
        </div>
        <hr/>
        <% item.comments.forEach(function(comment){ %>
          <div class="row bg-light container">
            <div class="col-md-12">
              <strong><%= comment.author.username %>: </strong>
              <span class="float-right">10 days ago</span>
              <p><%= comment.text%></p>
            </div>
          </div>
        <% }) %>
      </div>

    </div>

  </div>

</div>




<% include ../partials/footer %>
