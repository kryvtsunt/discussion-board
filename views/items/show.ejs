<% include ../partials/header %>

<div class="container">
  <h4><%= item.name %></h4>
  <img src= " <%= item.image %>">
  <p><%= item.description%> </p>
  <p><a class="btn btn-primary" href="/items/<%=item._id%>/comments/new"> Add New Comment </a> </p>
</div>

<% item.comments.forEach(function(comment){ %>
  <p><strong><%= comment.author%></strong> <%= comment.text%></p>
<% }) %>


